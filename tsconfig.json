{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@hpo-feature-extensions": ["./features/extensions/index"],
      "@hpo-feature-extensions/*": ["./features/extensions/*"],
      "@hpo-features": ["./features/index"],
      "@hpo-features/*": ["./features/*"],
      "@hpo-globals": ["./globals/index"],
      "@hpo-utilities": ["./utilities/index"],
      "@hpo-models": ["./models/index"],
      "@hpo-helpers": ["./helpers/index"],
      "@hpo-components": ["./components/index"],
      "@hpo-types": ["./types/index"],
      "@hpo-scss/*": ["./scss/*"],
      "@hpo-project-root/*": ["../*"],
    }
  }
}